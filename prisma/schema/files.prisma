// File Record Management

model FileUpload {
  id              String        @id @default(uuid()) @unique
  origname        String        @map("orig_file_name")
  name            String        @map("file_name")
  type            String?       @map("mime_type")
  size            Int           @map("file_size")
  metadata        Json?
  bucket          String
  path            String        @map("file_path")
  uploaderUserId  String        @map("uploader_user_id")
  status          FileStatus    @default(UPLOAD_FAILED)
  isPublic        Boolean       @default(false)
  comment         String?

  isActive        Boolean       @default(true) @map("is_active")
  createdAt       DateTime      @default(now()) @map("created_at")
  updatedAt       DateTime      @updatedAt() @map("updated_at")
  
  @@index([name, bucket, uploaderUserId, createdAt(sort: Asc)])
  @@map("file_uploads")
  @@schema("files")
}



// ENUMS

enum FileStatus {
  UPLOAD_FAILED
  UPLOADED
  MISSING_IN_STORAGE
  ORPHANED
  @@schema("files")
}
